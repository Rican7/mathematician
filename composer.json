{
    "name": "rican7/mathematician",
    "description": "A PHP mathematics library for simpler, more reliable math operations... even on big numbers",
    "keywords": ["math", "numbers", "integers", "long", "gmp", "bcmath"],
    "license": "MIT",
    "authors": [
        {
            "name": "Trevor Suarez",
            "email": "rican7@gmail.com",
            "homepage": "http://about.me/tnsuarez"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "phpunit/phpunit": "^4.8 || ^5.5 || ^6.5",
        "squizlabs/php_codesniffer": "1.5.x"
    },
    "suggest": {
        "ext-gmp": "Fast math operations with big number support (abritary precision)"
    },
    "autoload": {
        "psr-4": { "Mathematician\\": "src/Mathematician" }
    },
    "autoload-dev": {
        "psr-4": { "Mathematician\\Tests\\": "tests/Mathematician" }
    }
}
